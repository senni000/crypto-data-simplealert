{
  "name": "crypto-data-alert",
  "version": "1.0.0",
  "description": "暗号通貨データ収集・アラートシステム - Deribit APIからBTCデータを収集し、Discord Webhookでアラート通知を送信",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "clean": "rm -rf dist",
    "start:pm2": "pm2 start ecosystem.config.js",
    "stop:pm2": "pm2 stop crypto-data-alert && pm2 delete crypto-data-alert",
    "perf": "ts-node collect-data/perf-test.ts",
    "collect:sample": "ts-node collect-data/run-sample.ts",
    "check:db": "ts-node collect-data/check-db.ts"
  },
  "keywords": ["crypto", "bitcoin", "deribit", "alert", "discord", "webhook"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "ws": "^8.14.2",
    "sqlite3": "^5.1.6",
    "dotenv": "^16.3.1",
    "axios": "^1.6.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/ws": "^8.5.10",
    "typescript": "^5.3.2",
    "ts-node": "^10.9.1",
    "@types/jest": "^29.5.8",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1"
  }
}
