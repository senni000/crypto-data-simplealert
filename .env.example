# Discord Webhook URL for alert notifications
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN

# SQLite database file path
DATABASE_PATH=~/Volume/buffalohd/crypto_data.db

# Deribit API WebSocket URL
DERIBIT_API_URL=wss://www.deribit.com/ws/api/v2

# Option data collection interval in milliseconds (1 hour = 3600000ms)
OPTION_DATA_INTERVAL=3600000

# Analytics collector settings
ENABLE_ANALYTICS_COLLECTION=true
ANALYTICS_INTERVAL_MS=60000
ANALYTICS_REFRESH_INTERVAL_MS=3600000
ANALYTICS_RATIO_WINDOW_USD=5
ANALYTICS_ALERT_INTERVAL_MS=60000

# CVD Z-Score threshold for alerts
CVD_ZSCORE_THRESHOLD=2.0
CVD_AGGREGATION_SYMBOL=BTC-PERP
# Comma-separated Deribit instrument names aggregated for CVD
CVD_AGGREGATION_TRADE_SYMBOLS=BTC-PERPETUAL,BTC-PERPETUAL-USDC
CVD_AGGREGATION_BATCH_SIZE=500
CVD_AGGREGATION_POLL_INTERVAL_MS=2000
CVD_ALERT_SUPPRESSION_MINUTES=30
ENABLE_CVD_ALERTS=true

# Alert queue & polling settings
ALERT_QUEUE_POLL_INTERVAL_MS=5000
ALERT_QUEUE_BATCH_SIZE=50
ALERT_QUEUE_MAX_ATTEMPTS=5
ALERT_OPTION_POLL_INTERVAL_MS=3600000
BLOCK_TRADE_POLL_INTERVAL_MS=10000
BLOCK_TRADE_AMOUNT_THRESHOLD=1000

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Database backup settings
# DATABASE_BACKUP_ENABLED=true
# DATABASE_BACKUP_PATH=/Volumes/buffalohd/crypto_data.db
# DATABASE_BACKUP_INTERVAL=3600000
# DATABASE_RETENTION_DAYS=3

# Performance harness overrides (optional)
# PERF_TRADE_BATCH=5000
# PERF_OPTION_BATCH=2000
# PERF_KEEP_DB=false
